<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mvp.view.activity.MyMessageActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="用户信息"
        android:layout_marginTop="30dp"
        android:textColor="#333333"
        android:textSize="14sp"
        android:layout_marginLeft="24dp"
        />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="312dp"
        android:layout_height="230dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/circle_radius"
        android:orientation="vertical"
        android:padding="20dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="9dp"
                android:text="用户头像"
                android:textColor="#666666"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/myMessage_head_image"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:background="@mipmap/my_icon_feedback" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="30dp"
                android:background="#d9d6d6"></View>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:text="用户昵称"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/myMessage_name"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:text="lallal"
                android:textColor="#999999"
                android:layout_marginTop="10dp"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="33dp"
                android:background="#d9d6d6"></View>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:text="用户性别"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/myMessage_sex"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:text="lallal"
                android:layout_marginTop="10dp"
                android:textColor="#999999"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="30dp"
                android:background="#d9d6d6"></View>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:text="出生日期"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/myMessage_data"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:text="lallal"
                android:textColor="#999999"
                android:layout_marginTop="10dp"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="30dp"
                android:background="#d9d6d6"></View>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:background="@drawable/circle_radius"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:text="手机号"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/myMessage_phone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:text="lallal"
                android:textColor="#999999"
                android:layout_marginTop="10dp"
                android:textSize="14sp" />
            <View
                android:layout_width="312dp"
                android:layout_height="1dp"
                android:layout_marginTop="30dp"
                android:background="#d9d6d6"></View>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:text="邮箱"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/myMessage_email"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:text="lallal"
                android:textColor="#999999"
                android:layout_marginTop="10dp"
                android:textSize="14sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="30dp"
                android:background="#d9d6d6"></View>
        </RelativeLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_radius"
        android:layout_marginTop="10dp"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:padding="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:text="重置密码"
            android:textColor="#666666"
            android:textSize="14sp" />
        <ImageView
            android:id="@+id/myMessage_updatePass"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/com_icon_next"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

    <ImageView
        android:id="@+id/myMessage_fan"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="24dp"
        android:background="#00000000"
        android:src="@mipmap/com_icon_my" />


</LinearLayout>