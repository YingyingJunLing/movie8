<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="312dp"
    android:layout_height="148dp"
    android:orientation="horizontal"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="20dp"
    android:background="@drawable/circle_radius"
    >
    <ImageView
        android:layout_width="103dp"
        android:layout_height="128dp"
        android:id="@+id/my_attention_movie_img"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/com_icon_my"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/my_attention_movie_name"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_margin="10dp"
            android:text="yirtwssss"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/my_attention_movie_jie"
            android:textSize="12sp"
            android:textColor="#333333"
            android:layout_margin="10dp"
            android:text="yirtwssss"
            />

    </LinearLayout>

</LinearLayout>
