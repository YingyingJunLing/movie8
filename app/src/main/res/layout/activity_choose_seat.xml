<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.qfdqc.views.seattable.SeatTable
        android:id="@+id/seatView"
        android:background="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="horizontal"
        android:background="@drawable/choose_seat_linear"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="-20dp"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="合计:"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥"
            android:textColor="#aaa"
            android:textSize="50dp"/>
        <TextView android:id="@+id/total_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="70dp"
            android:text="0.00"
            android:textColor="#a9144d"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>
        <ImageView android:id="@+id/choose_true_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/choose_true"
            android:layout_marginRight="10dp"/>
        <ImageView android:id="@+id/choose_false_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/choose_false"/>
    </LinearLayout>
</RelativeLayout>