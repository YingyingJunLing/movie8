<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    >
    <TextView
        android:layout_marginTop="64dp"
        android:layout_width="77dp"
        android:layout_height="28dp"
        android:id="@+id/my_record_time"
        android:text="啦啦啦啦"
        android:textSize="14sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/my_record_jbbtn"
        />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="312dp"
        android:layout_height="250dp"
        android:layout_marginLeft="12dp"
        android:orientation="vertical"
        android:background="@drawable/circle_radius"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/my_record_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="yingying"
                android:textColor="#333333"
                android:textSize="14sp" />

            <TextView
                android:layout_margin="10dp"
                android:id="@+id/my_record_status"
                android:layout_width="60dp"
                android:layout_height="28sp"
                android:layout_alignParentRight="true"
                android:text="莹莹"
                android:textColor="#fff"
                android:gravity="center"
                android:background="@drawable/jbbtn"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/my_record_camera"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:text="影院"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/my_record_hao"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="订单号"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/my_record_yingting"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="影厅"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/my_record_seetime"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="时间"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/my_record_num"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="数量"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/my_record_money"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="金钱"
            />
    </LinearLayout>

</LinearLayout>
