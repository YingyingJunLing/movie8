<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@mipmap/my_back"
            />
        <ImageView
            android:id="@+id/sysMsg"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="30dp"
            android:src="@mipmap/my_remind"

            />
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/my_head"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@mipmap/my_head"
            app:roundAsCircle="true"
            android:layout_marginTop="70dp"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/my_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="165dp"
            android:layout_marginTop="155dp"
            android:textColor="@color/colorWhite"
            android:textSize="14sp"
            android:text="冬天来了" />
    </RelativeLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:padding="20dp"
        android:background="@drawable/circle_radius"
        android:layout_marginTop="10dp"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp">
        <ImageView
            android:id="@+id/my_message_image"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="30dp"
            android:background="@mipmap/my_icon_messiage"
            />
        <TextView
            android:id="@+id/my_message_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的信息"
            android:textColor="#666666"
            android:textSize="10sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            />
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:padding="20dp"
        android:background="@drawable/circle_radius"
        android:layout_marginTop="10dp"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/my_attention_image"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="30dp"
                android:background="@mipmap/my_icon_attention"
                />
            <TextView
                android:id="@+id/my_attention_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的关注"
                android:textColor="#666666"
                android:textSize="10sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/my_record_image"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="60dp"
                android:background="@mipmap/my_icon_rccord" />

            <TextView
                android:id="@+id/my_record_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="购票记录"
                android:textColor="#666666"
                android:textSize="10sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="54dp"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:padding="20dp"
        android:background="@drawable/circle_radius"
        android:layout_marginTop="10dp"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/my_feeddb_image"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="30dp"
                android:background="@mipmap/my_icon_feedback"
                />
            <TextView
                android:id="@+id/my_feed_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="意见反馈"
                android:textColor="#666666"
                android:textSize="10sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/my_version_image"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="60dp"
                android:background="@mipmap/my_icon_version" />

            <TextView
                android:id="@+id/my_version_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最新版本"
                android:textColor="#666666"
                android:textSize="10sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="54dp"
                />
        </LinearLayout>
    </LinearLayout>



</LinearLayout>