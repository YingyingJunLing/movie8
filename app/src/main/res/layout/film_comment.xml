<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/circle_radius"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">

    <!--头像 -->
    <ImageView
        android:id="@+id/film_comment_head"
        android:layout_width="50dp"
        android:layout_height="50dp"
        fresco:layout_constraintLeft_toLeftOf="parent"
        fresco:layout_constraintTop_toTopOf="parent"
        />
    <!--昵称 -->
    <TextView
        android:id="@+id/film_comment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fresco:layout_constraintTop_toTopOf="@id/film_comment_head"
        fresco:layout_constraintBottom_toBottomOf="@id/film_comment_head"
        fresco:layout_constraintLeft_toRightOf="@id/film_comment_head"
        android:layout_marginLeft="6dp"
        android:text="safggafs"
        android:textSize="14sp"
        android:textColor="#666666"
        />
    <!-- 时间 -->
    <TextView
        android:id="@+id/film_comment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fresco:layout_constraintTop_toTopOf="@id/film_comment_head"
        fresco:layout_constraintBottom_toBottomOf="@id/film_comment_head"
        fresco:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="6dp"
        android:text="safggafs"
        android:textSize="10sp"
        android:textColor="#666666"
        />
    <!--评价内容 -->
    <TextView
        android:id="@+id/film_comment_content"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="10dp"
        android:text="safggafs"
        android:textColor="#666666"
        android:textSize="10sp"
        fresco:layout_constraintLeft_toLeftOf="parent"
        fresco:layout_constraintRight_toRightOf="parent"
        fresco:layout_constraintTop_toBottomOf="@id/film_comment_head" />

    <!--点赞数量 -->
    <TextView
        android:id="@+id/film_comment_num"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        fresco:layout_constraintRight_toRightOf="parent"
        fresco:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="14sp"
        android:lines="1"
        android:text="safggafs"
        android:textSize="12sp"
        android:textColor="#666666"
        android:layout_marginBottom="2dp"
        />
    <!--点赞的图片 -->
    <ImageView
        android:id="@+id/film_comment_image_like"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@mipmap/common_btn_prise_s"
        fresco:layout_constraintRight_toLeftOf="@id/film_comment_num"
        fresco:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="10dp"
        />
    <ImageView
        android:id="@+id/film_comment_image_disike"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@mipmap/common_btn_prise_n"
        fresco:layout_constraintRight_toLeftOf="@id/film_comment_num"
        fresco:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="10dp"
        />
</android.support.constraint.ConstraintLayout>