<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mvp.view.activity.CinemaActivity"
    android:background="#fff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RadioGroup android:id="@+id/radio_cinema"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:gravity="center">
            <RadioButton android:id="@+id/hotmovie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:button="@null"
                android:background="@drawable/button_sel"
                android:textColor="@drawable/text_sel"
                android:textSize="16sp"
                android:text="@string/hotmovie"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <RadioButton android:id="@+id/releasemovie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:button="@null"
                android:background="@drawable/button_sel"
                android:textColor="@drawable/text_sel"
                android:textSize="16sp"
                android:text="@string/releasemovie"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <RadioButton android:id="@+id/comingsoonmovie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:button="@null"
                android:background="@drawable/button_sel"
                android:textColor="@drawable/text_sel"
                android:textSize="16sp"
                android:text="@string/comingsoonmovie"/>
        </RadioGroup>
        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager_cinema"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></android.support.v4.view.ViewPager>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="left">
        <Button
            android:id="@+id/fan"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@mipmap/com_icon_my_default"/>
    </LinearLayout>
</RelativeLayout>