<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mvp.view.activity.MyAttentionActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >
            <Button
                android:id="@+id/my_attention_movie"
                android:layout_marginTop="10dp"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="电影"
                android:textSize="14sp"
                android:textColor="#333333"
                android:layout_marginLeft="50dp"
                android:background="@drawable/film_camera_btn"
                />
            <Button
                android:id="@+id/my_attention_camera"
                android:layout_marginTop="10dp"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="影院"
                android:textSize="14sp"
                android:textColor="#333333"
                android:layout_marginLeft="200dp"
                android:background="@drawable/film_camera_btn"
                />
        </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/my_attention_movie_rec"
        android:layout_margin="24dp"
        android:background="@drawable/circle_radius"

        ></android.support.v7.widget.RecyclerView>
    <android.support.v7.widget.RecyclerView
        android:layout_margin="24dp"
        android:background="@drawable/circle_radius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/my_attention_camera_rec"
        android:visibility="gone"
        ></android.support.v7.widget.RecyclerView>
</LinearLayout>
